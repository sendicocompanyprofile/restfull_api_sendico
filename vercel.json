{
  "version": 2,
  "buildCommand": "npm run build && prisma generate",
  "outputDirectory": "dist",
  "env": {
    "DATABASE_URL": "@database_url",
    "NODE_ENV": "production"
  },
  "functions": {
    "src/index.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/.*",
      "dest": "dist/index.js"
    }
  ]
}
